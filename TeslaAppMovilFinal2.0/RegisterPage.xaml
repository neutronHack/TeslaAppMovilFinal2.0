<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeslaAppMovilFinal2._0.RegisterPage"
             Title="Registrarse"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Crear cuenta"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Entry x:Name="NombreEntry"
                   Placeholder="Nombre"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Entry x:Name="ApellidoEntry"
                   Placeholder="Apellido"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Correo electrónico"
                   Keyboard="Email"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Entry x:Name="TelefonoEntry"
                   Placeholder="Teléfono"
                   Keyboard="Telephone"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Button Text="Registrarse"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="12"
                    Clicked="OnRegisterClicked" />

            <Label Text="¿Ya tienes una cuenta?"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Button Text="Iniciar sesión"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    Clicked="OnLoginRedirect"
                    FontAttributes="Bold"
                    FontSize="14" />

        </StackLayout>
    </ScrollView>
</ContentPage>
