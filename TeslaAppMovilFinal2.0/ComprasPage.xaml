<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeslaAppMovilFinal2._0.ComprasPage"
             Title="Resumen y Datos de Compra"
             BackgroundColor="#EFEFEF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- TARJETA DE RESUMEN -->
            <Frame CornerRadius="20"
                   BackgroundColor="#F9F9F9"
                   Padding="20"
                   HasShadow="True"
                   Margin="10">

                <VerticalStackLayout Spacing="12">
                    <Label Text="Resumen de Compra"
                           FontFamily="PoppinsBold"
                           FontSize="22"
                           TextColor="#333"
                           HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                          RowSpacing="8"
                          ColumnSpacing="12">

                        <Label Text="Modelo:" FontFamily="PoppinsBold" TextColor="#333" Grid.Row="0" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.IdVehiculo}" FontFamily="PoppinsRegular" TextColor="#333" Grid.Row="0" Grid.Column="1"/>

                        <Label Text="Color Exterior:" FontFamily="PoppinsBold" TextColor="#333" Grid.Row="1" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Color}" FontFamily="PoppinsRegular" TextColor="#333" Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Aros:" FontFamily="PoppinsBold" TextColor="#333" Grid.Row="2" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Aros}" FontFamily="PoppinsRegular" TextColor="#333" Grid.Row="2" Grid.Column="1"/>

                        <Label Text="Interior:" FontFamily="PoppinsBold" TextColor="#333" Grid.Row="3" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Interior}" FontFamily="PoppinsRegular" TextColor="#333" Grid.Row="3" Grid.Column="1"/>

                        <Label Text="Precio:" FontFamily="PoppinsBold" TextColor="#333" Grid.Row="4" Grid.Column="0"/>
                        <Label Text="{Binding Precio}" FontFamily="PoppinsRegular" TextColor="#333" Grid.Row="4" Grid.Column="1"/>

                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- FORMULARIO DE COMPRA -->
            <Frame CornerRadius="20"
                   BackgroundColor="#F9F9F9"
                   Padding="20"
                   HasShadow="True"
                   Margin="10">

                <VerticalStackLayout Spacing="16">

                    <Label Text="Datos para la compra"
                           FontSize="20"
                           FontFamily="PoppinsBold"
                           HorizontalOptions="Center"
                           TextColor="#333"/>

                    <Entry Placeholder="Nombre" FontFamily="PoppinsRegular" Text="{Binding Nombre}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Apellido 1" FontFamily="PoppinsRegular" Text="{Binding Apellido1}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Apellido 2" FontFamily="PoppinsRegular" Text="{Binding Apellido2}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Cédula" FontFamily="PoppinsRegular" Keyboard="Numeric" Text="{Binding Cedula}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Teléfono" FontFamily="PoppinsRegular" Keyboard="Telephone" Text="{Binding Telefono}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Correo Electrónico" FontFamily="PoppinsRegular" Keyboard="Email" Text="{Binding Email}" PlaceholderColor="#888" TextColor="#333"/>

                    <Label Text="Datos de la tarjeta"
                           FontSize="20"
                           FontFamily="PoppinsBold"
                           HorizontalOptions="Center"
                           TextColor="#333"
                           Margin="0,10,0,0"/>

                    <Entry Placeholder="Número de Tarjeta (16 dígitos)" FontFamily="PoppinsRegular" Keyboard="Numeric" Text="{Binding NumeroTarjeta}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="Fecha de Caducidad (MM/AA)" FontFamily="PoppinsRegular" Text="{Binding FechaCaducidad}" PlaceholderColor="#888" TextColor="#333"/>
                    <Entry Placeholder="CVV (3 dígitos)" FontFamily="PoppinsRegular" Keyboard="Numeric" IsPassword="True" Text="{Binding CVV}" PlaceholderColor="#888" TextColor="#333"/>
                </VerticalStackLayout>
            </Frame>

            <!-- BOTÓN FINAL -->
            <Button Text="Finalizar Compra"
                    BackgroundColor="#007AFF"
                    FontFamily="PoppinsBold"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Margin="10,0"
                    Clicked= "OnFinalizarCompraClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
