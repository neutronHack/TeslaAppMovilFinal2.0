<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeslaAppMovilFinal2._0.ComprasPage"
             Title="Resumen y Datos de Compra"
             BackgroundColor="#bfbfbf">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- ðŸ§¾ TARJETA DE RESUMEN -->
            <Frame CornerRadius="12" BorderColor="Black" BackgroundColor="#FAFAFA"
                   Padding="15" HasShadow="True" Margin="0.5">
                <VerticalStackLayout Spacing="8">
                    <Label TextColor="Black" Text="Resumen de Compra" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto,Auto,Auto"
              RowSpacing="6"
              ColumnSpacing="10">
                        


                        <Label TextColor="Black" Text="Modelo:" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                        <Label TextColor="Black" Text="{Binding Personalizacion.IdVehiculo}" Grid.Row="0" Grid.Column="1"/>

                        <Label TextColor="Black" Text="Color Exterior:" FontAttributes="Bold" Grid.Row="1" Grid.Column="0"/>
                        <Label TextColor="Black" Text="{Binding Personalizacion.Color}" Grid.Row="1" Grid.Column="1"/>

                        <Label TextColor="Black" Text="Aros:" FontAttributes="Bold" Grid.Row="2" Grid.Column="0"/>
                        <Label TextColor="Black" Text="{Binding Personalizacion.Aros}" Grid.Row="2" Grid.Column="1"/>

                        <Label TextColor="Black" Text="Interior:" FontAttributes="Bold" Grid.Row="3" Grid.Column="0"/>
                        <Label TextColor="Black" Text="{Binding Personalizacion.Interior}" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>


            <Frame CornerRadius="12" BorderColor="black" BackgroundColor="#FAFAFA" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    
                    <Label TextColor="Black" HorizontalOptions="Center" Text="Datos para la compra" FontSize="18" FontAttributes="Bold"/>
                    
                    <BoxView HeightRequest="1" BackgroundColor="Black" HorizontalOptions="Center"/>
                    
                    <Entry TextColor="Black" Placeholder="Nombre" Text="{Binding Nombre}" />
                    <Entry TextColor="Black" Placeholder="Apellido 1" Text="{Binding Apellido1}" />
                    <Entry TextColor="Black" Placeholder="Apellido 2" Text="{Binding Apellido2}" />
                    <Entry TextColor="Black" Placeholder="CÃ©dula" Keyboard="Numeric" Text="{Binding Cedula}" />
                    <Entry TextColor="Black" Placeholder="TelÃ©fono" Keyboard="Telephone" Text="{Binding Telefono}" />
                    <Entry TextColor="Black" Placeholder="Correo ElectrÃ³nico" Keyboard="Email" Text="{Binding Email}" />
                    
                    
                    
                    <Label HorizontalOptions="Center" TextColor="Black" Text="Datos de la tarjeta" FontSize="18" FontAttributes="Bold" Margin="0,15,0,0"/>
                    <Entry TextColor="Black" Placeholder="NÃºmero de Tarjeta (16 dÃ­gitos)" Keyboard="Numeric" Text="{Binding NumeroTarjeta}" />
                    <Entry TextColor="Black" Placeholder="Fecha de Caducidad (MM/AA)" Text="{Binding FechaCaducidad}" />
                    <Entry TextColor="Black" Placeholder="CVV (3 dÃ­gitos)" Keyboard="Numeric" IsPassword="True" Text="{Binding CVV}" />
                </VerticalStackLayout>
            </Frame>

            <BoxView HeightRequest="1" BackgroundColor="black" HorizontalOptions="Center"/>
            
            <Button Text="Finalizar Compra"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Clicked="OnFinalizarCompraClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>