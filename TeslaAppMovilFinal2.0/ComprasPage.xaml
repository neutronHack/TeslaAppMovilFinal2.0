<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeslaAppMovilFinal2._0.ComprasPage"
             Title="Resumen y Datos de Compra"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- ðŸ§¾ TARJETA DE RESUMEN -->
            <Frame CornerRadius="12" BorderColor="#CCCCCC" BackgroundColor="#FAFAFA" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Resumen de Compra" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto,Auto,Auto"
              RowSpacing="6"
              ColumnSpacing="10">

                        <Label Text="Modelo:" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.IdVehiculo}" Grid.Row="0" Grid.Column="1"/>

                        <Label Text="Color Exterior:" FontAttributes="Bold" Grid.Row="1" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Color}" Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Aros:" FontAttributes="Bold" Grid.Row="2" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Aros}" Grid.Row="2" Grid.Column="1"/>

                        <Label Text="Interior:" FontAttributes="Bold" Grid.Row="3" Grid.Column="0"/>
                        <Label Text="{Binding Personalizacion.Interior}" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>


            <Frame CornerRadius="12" BorderColor="#CCCCCC" BackgroundColor="#FAFAFA" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Datos para la compra" FontSize="18" FontAttributes="Bold"/>

                    <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
                    <Entry Placeholder="Apellido 1" Text="{Binding Apellido1}" />
                    <Entry Placeholder="Apellido 2" Text="{Binding Apellido2}" />
                    <Entry Placeholder="CÃ©dula" Keyboard="Numeric" Text="{Binding Cedula}" />
                    <Entry Placeholder="TelÃ©fono" Keyboard="Telephone" Text="{Binding Telefono}" />
                    <Entry Placeholder="Correo ElectrÃ³nico" Keyboard="Email" Text="{Binding Email}" />

                    <Label Text="Datos de la tarjeta" FontSize="18" FontAttributes="Bold" Margin="0,15,0,0"/>
                    <Entry Placeholder="NÃºmero de Tarjeta (16 dÃ­gitos)" Keyboard="Numeric" Text="{Binding NumeroTarjeta}" />
                    <Entry Placeholder="Fecha de Caducidad (MM/AA)" Text="{Binding FechaCaducidad}" />
                    <Entry Placeholder="CVV (3 dÃ­gitos)" Keyboard="Numeric" IsPassword="True" Text="{Binding CVV}" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Finalizar Compra"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Clicked="OnFinalizarCompraClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>